            "type": "string"
          },
          {
            "name": "chart_name",
            "in": "query",
            "required": true,
            "description": "图表名称。",
            "type": "string"
          },
          {
            "name": "devid",
            "type": "string",
            "in": "query",
            "required": true,
            "description": "设备编号。"
          },
          {
            "name": "startTime",
            "type": "integer",
            "format": "int64",
            "in": "query",
