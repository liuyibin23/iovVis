            "schema": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string",
                  "enum": [
                    "REPORTS"
                  ]
                },
                "value": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Report"
                  }
                },
                "lastUpdateTs": {
                  "type": "integer"
                }
              }
            }
          },
          "401": {
            "$ref": "#/responses/Standard401ErrorResponse"
          },
          "404": {
            "$ref": "#/responses/Standard404ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/Standard500ErrorResponse"
          }
        }
      },
      "post": {
        "tags": [
          "报表"
        ],
        "summary": "创建资产关联的报表",
        "description": "添加报表文件到指定资产。只会影响到资产的REPORTS属性的value值中的kv项的一项。如果资产的REPORTS属性不存在，增加该属性，并增加value中的kv项；如果REPORTS属性存在，而value的report_name不存在，则添加一个新的kv项；否则说明报表已经存在，不能添加（需要先删除再添加）。",
        "consumes": [
          "multipart/form-data"
        ],
        "parameters": [
          {
            "name": "assetId",
            "in": "path",
            "type": "string",
            "required": true,
            "description": "关联报表的资产编号（assetId）。"
          },
          {
            "name": "report_name",
            "in": "formData",
            "type": "string",
            "required": true,
            "description": "报表文件名称。"
          },
          {
            "name": "report_file",
            "in": "formData",
            "type": "file",
            "required": true,
            "description": "报表文件。"
          },
          {
            "name": "report_type",
            "in": "formData",
            "type": "string",
            "enum": [
              "日报",
              "周报",
              "月报",
              "季报"
            ],
            "description": "报表类型。"
          },
          {
            "name": "report_date",
            "in": "formData",
            "type": "string",
            "required": true,
            "description": "报表日期"
          }
        ],
        "responses": {
          "200": {
            "description": "成功创建报表并关联到资产。"
          },
          "401": {
            "$ref": "#/responses/Standard401ErrorResponse"
          },
          "404": {
            "$ref": "#/responses/Standard404ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/Standard500ErrorResponse"
          },
          "501": {
            "description": "报表上传失败。"
          },
          "502": {
            "description": "报表更新冲突。"
          },
          "503": {
            "description": "报表名称已经存在。"
          }
        }
      },
      "delete": {
        "tags": [
          "报表"
        ],
        "summary": "删除资产关联的报表",
        "description": "删除指定资产的某个关联的报表文件，包含关系和文件本身。",
        "parameters": [
          {
            "$ref": "#/parameters/assetId"
          },
          {
            "$ref": "#/parameters/reportName"
          }
        ],
        "responses": {
          "200": {
            "description": "成功删除资产的报表。"
          },
          "401": {
            "$ref": "#/responses/Standard401ErrorResponse"
          },
          "404": {
            "$ref": "#/responses/Standard404ErrorResponse"
          },
          "500": {
            "$ref": "#/responses/Standard500ErrorResponse"
          },
          "502": {
            "description": "报表更新冲突。"
          }
        }
      }
    },
    "/reports/stat": {
      "get": {
        "tags": [
          "报表"
        ],
        "summary": "统计当前登录业主的所有资产的报表",
        "description": "返回所有资产的报表的全部数据用于统计。",
        "parameters": [
          {
            "name": "limit",
